{
  "name": "@savvy-css/spacing-variables",
  "version": "0.0.1",
  "description": "Spacing variables for Savvy CSS.",
  "main": "build/spacing-variables.css",
  "style": "build/spacing-variables.css",
  "keywords": [
    "savvy-css",
    "savvy-css-package",
    "savvy-css spacing variables",
    "savvy-css variables",
    "css"
  ],
  "repository": {
    "url": "https://github.com/savvy-css/spacing-variables.git",
    "type": "git"
  },
  "files": [
    "build/"
  ],
  "bugs": {
    "url": "https://github.com/savvy-css/spacing-variables/issues"
  },
  "homepage": "https://github.com/savvy-css/spacing-variables",
  "author": "Brian Sipple <@Brian_Sipple>",
  "license": "MIT",
  "devDependencies": {
    "@savvy-css/stylelint-config-savvy": "^0.2.0",
    "cssnano": "^3.10.0",
    "del-cli": "^1.0.0",
    "live-server": "^1.2.0",
    "postcss-cli": "^4.0.0",
    "postcss-cssnext": "^2.11.0",
    "postcss-import": "^10.0.0",
    "postcss-reporter": "^3.0.0",
    "stylelint": "^8.0.0"
  },
  "scripts": {
    "clean": "del build/**",
    "setup": "mkdir -p build",
    "transform": "postcss index.css -o build/spacing-variables.css -c postcss.config.js",
    "transform:watch": "postcss index.css -o build/spacing-variables.css -c postcss.config.js -w",
    "build": "npm run clean && npm run setup && npm run transform",
    "build:test": "npm run clean && postcss test/index-test.css -u postcss-import -u postcss-cssnext -o build/test.css",
    "serve": "live-server --port=9823",
    "serve:test": "npm run build:test && npm run serve",
    "lint:css": "npm run setup && postcss index.css -o build/linted.css --config test/postcss.config.js && rm build/linted.css",
    "test": "npm run lint:css",
    "prepublish": "npm run clean && npm run setup && npm run build",
    "deploy": "np"
  }
}
